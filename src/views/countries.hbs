<!-- ======= Countries Section ======= -->
    <section id="team" class="team section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Countries</h2>
        </div>

        <div class="row">
        <table class="table table-dark">
          <thead>
            <tr>
              <th scope="col">Code</th>
              <th scope="col">Name</th>
               <th scope="col"></th>
            </tr>
          </thead>
          <tbody>
          {{#each countries}}
            <tr>
                          <td>{{code}}</td>

              <td>{{name}}</td>
              <td><i class="text-danger bi bi-trash-fill"></i></td>
            {{/each}}
            </tr>
          </tbody>
        </table>
        </div>

      </div>
    </section>
<!-- End Countries Section -->
 <!-- ======= New Countries Section ======= -->
    <section id="countries" class="contact">
      <div class="container" data-aos="fade-up">
        <div class="section-title">
          <h2>New Countries</h2>
        </div>
          <div class="col-lg-12">
          {{#if message}}
              <div class="alert alert-danger" role="alert">
                {{message.info}}
              </div>
          {{/if}}
            <form action="/api/countries" method="post" role="form" class="nodeCustom-form">
              <div class="row">
              <div class="col form-group">
                <input type="text" name="code" class="form-control"id="firstName" placeholder="Code" required>
              </div>
                <div class="col form-group">
                  <input type="text" name="name" class="form-control" id="lastName" placeholder="Name" required>
                </div>

              </div>

              <div class="my-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Your message has been sent. Thank you!</div>
              </div>
              <div class="text-center"><button type="submit">Add</button></div>
            </form>
          </div>

        </div>

      </div>
    </section>
    <!-- End Countries Section -->
