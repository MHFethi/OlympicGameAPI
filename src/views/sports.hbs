<!-- ======= Sports Section ======= -->
<section id="team" class="team section-sport">
    <div class="container" data-aos="fade-up">
        <div class="section-title">
            <h2>Sports</h2>
        </div>
        <div class="grid default-grid">
            <div class="container">
                <div class="row gutter-margin-xs-sm gutter-margin-sm-md">
                    <div class="col-xs-12">
                        <div class="row row-xs-xs sample-row">
                            {{#each sports}}
                                <div class="col-xs-6 col-sm-3 col-md-2 gutter-xs-xs gutter-margin-xs-xs text-center p-3 ">
                                    <img src="/img/sports/{{photo}}" class="img-fluid text-center" alt="" style="width: 75px; height: 75px">
                                    <div class="inner text-center">{{name}}</div>
                                    <div class="social">
                                        <a href=""><i class="bi bi-pencil-fill"></i></a>
                                        <a href=""><i class="bi bi-trash-fill"></i></a>
                                    </div>
                                </div>

                            {{/each}}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- End Team Section -->


