<!-- ======= Athletes Section ======= -->
    <section id="team" class="team section-bg">
      <div class="container" data-aos="fade-up">

        <div class="section-title">
          <h2>Athlete</h2>
        </div>

        <div class="row">
        {{#each athletes}}
          <div class="col-lg-3 col-md-6 d-flex align-items-stretch">
            <div class="member" data-aos="fade-up" data-aos-delay="100">
              <div class="member-img">
                <img src="/img/athletes/{{photo}}" class="img-fluid" alt="">

              </div>
              <div class="member-info">
                <h4>{{firstName}} {{lastName}}</h4>
                <span>{{country.name}}</span>
                <span>{{gender.name}}</span>
              <div class="mt-2 social">
                  <a href="athletes/{{athlete_id}}"><i class="bi bi-eye"></i></a>
                  <i class="text-danger bi bi-pencil-fill"></i>
                  <form action='/api/athletes' method="delete">
                    <input type="hidden" name="{{athlete_id}}"/>
                    <button type="submit">
                        <i class="text-danger bi bi-trash-fill"></i>
                    </button>
                  </form>

              </div>
              </div>
            </div>
          </div>
         {{/each}}
        </div>

      </div>
    </section>
<!-- End Athletes Section -->

 <!-- ======= New Athletes Section ======= -->
    <section id="athlete" class="contact">
      <div class="container" data-aos="fade-up">
        <div class="section-title">
          <h2>New Athlete</h2>
        </div>
          <div class="col-lg-12">
          {{#if message}}
              <div class="alert alert-danger" role="alert">
                {{message.info}}
              </div>
          {{/if}}
            <form action="/api/athletes" method="post" role="form" class="nodeCustom-form">
              <div class="row">
              <div class="col form-group">
                <input type="text" name="firstName" class="form-control"id="firstName" placeholder="First name" required>
              </div>
                <div class="col form-group">
                  <input type="text" name="lastName" class="form-control" id="lastName" placeholder="Last name" required>
                </div>

              </div>
              <div class="form-group">
                <select class="form-select" aria-label="Default select example" name="country_id">
                  {{#each countries}}
                    <option value={{country_id}}>{{name}}</option>
                  {{/each}}
                </select>
              </div>
              <div class="form-group">
                <select class="form-select" aria-label="Default select example" name="gender_id">
                    {{#each gender}}
                        <option value={{gender_id}}>{{name}}</option>
                    {{/each}}
                </select>
              </div>
              <div class="my-3">
                <div class="loading">Loading</div>
                <div class="error-message"></div>
                <div class="sent-message">Your message has been sent. Thank you!</div>
              </div>
              <div class="text-center"><button type="submit">Add</button></div>
            </form>
          </div>

        </div>

      </div>
    </section>


    <!-- End Athletes Section -->




